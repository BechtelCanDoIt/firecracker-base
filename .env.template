# =============================================================================
# firecracker-base Environment Configuration
# =============================================================================
# Copy to .env and customize before running.
# =============================================================================

# =============================================================================
# REQUIRED: Workspace
# =============================================================================

# Your project directory (mounted at /workspace in VM)
HOST_WORKSPACE=./workspace

# =============================================================================
# VM RESOURCES (sized for Docker workloads)
# =============================================================================

# Number of vCPUs (recommend 4+ for Docker)
FC_VCPU=4

# Memory in MB (recommend 4096+ for Docker)
FC_MEM=4096

# Workspace block device size in MB
FC_WORKSPACE_SIZE=4096

# =============================================================================
# LOGGING
# =============================================================================

# Log level: Error, Warning, Info, Debug
FC_LOG_LEVEL=Warning

# Console type: interactive, detached
FC_CONSOLE_TYPE=interactive
